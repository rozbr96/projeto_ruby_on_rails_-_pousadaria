
<div class="container">
  <table id="reviews-table" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nota</th>

        <% if display_sensitive_data %>
          <th>Respondida?</th>
        <% end %>

        <th>Comentário</th>
      </tr>
    </thead>

    <tbody>
      <% if reviews.empty? %>
        <tr>
          <td colspan="<%= display_sensitive_data ? 3 : 2 %>">Nenhuma avaliação encontrada</td>
        </tr>
      <% else %>
        <% reviews.each do |review| %>
          <tr>
            <td><%= review.score %></td>

            <% if display_sensitive_data %>
              <td><%= get_boolean_text_for review.replied? %></td>
            <% end %>

            <td><%= review.guest_commentary %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
