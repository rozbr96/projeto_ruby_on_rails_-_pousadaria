
<div class="container" style="width: 400px">
  <h2 class="text-center pt-5">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control my-2" %>
  </div>

  <% if resource.kind_of? Guest %>
    <div class="field">
      <%= f.label :citizen_number %>
      <%= f.text_field :citizen_number, class: "form-control my-2" %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control my-2" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(m√≠nimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control my-2" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control my-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar", class: "btn btn-outline-primary form-control my-1" %>
  </div>
<% end %>

  <div class="py-2">
    <%= render "devise/shared/links" %>
  </div>
</div>
