
<div class="d-flex mx-5 mt-5 pb-1">
  <%= link_to 'Voltar', inns_path %>
</div>

<div class="container-fluid">
  <%= render partial: 'infos', locals: { display_sensitive_data: false } %>
</div>

<div class="container-fluid mt-5">
  <%= render partial: 'rooms/list', locals: {
    rooms: @rooms,
    display_sensitive_data: false,
    get_room_path: -> room { room_path(room) }
  } %>
</div>

<div class="d-flex mx-5 mt-5 justify-content-end">
  <%= link_to 'Listar todas avaliações', reviews_inn_path(@inn) %>
</div>

<div class="container-fluid">
  <%= render partial: 'reviews/list', locals: {
    display_sensitive_data: false,
    reviews: @inn.reviews.last(3)
  } %>
</div>
